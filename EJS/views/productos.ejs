<h2 style="color:blue;">Vista de Productos</h2>
<br>
<% if (productos.length > 0) { %>
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: white;">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
        <% for (const producto of productos) {%>
        <tr>
            <td><%=producto.title%></td>
            <td>$<%=producto.price%></td>
            <td><img src="<%=producto.thumbnail%>" style="max-height:100%; max-width:100%"></td>
        </tr>
        <% } %>
    </table>
</div>
<% } else { %>
<h3 class="alert alert-warning">No se encontraron productos</h1>
<% } %>

<a href='/' class="btn btn-success"> Cargar nuevo producto</a>